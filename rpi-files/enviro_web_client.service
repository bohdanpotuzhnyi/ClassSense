# /etc/systemd/system/enviro_web_client.service
[Unit]
Description=Enviro+ + Pimoroni SGP30 web client
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/thrombus77/ClassSense/rpi-files
# Use the Python from your virtual environment
ExecStart=/home/thrombus77/ClassSense/rpi-files/venv/bin/python /home/thrombus77/ClassSense/rpi-files/sensor_client.py
Restart=on-failure
RestartSec=5

# Allow audio access for noise measurement
Environment=PULSE_SERVER=unix:/run/user/1000/pulse/native

[Install]
WantedBy=multi-user.target
